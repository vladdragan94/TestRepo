@model MovieDictionary.Models.LoginViewModel

<form id="login-form" class="form-horizontal" role="form">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div style="display:none" class="validation-summary-errors text-danger">
        </div>
    </div>
    <div class="form-group">
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Email or username" })
        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <div class="checkbox">
            @Html.CheckBoxFor(m => m.RememberMe)
            @Html.LabelFor(m => m.RememberMe)
        </div>
    </div>
    <div class="form-group login-register-button-group">
        <input type="submit" value="Log in" class="btn btn-success" />
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}