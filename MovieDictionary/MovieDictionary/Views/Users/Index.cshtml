@model List<MovieDictionary.Entities.Profile>
@{
    ViewBag.Title = "Top Users";
}

@Styles.Render("~/Content/Users")

@if (Model != null)
{
    <div class="top-users">
        <h2>@ViewBag.Title</h2>
        <table class="table table-striped table-responsive top-users-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>User</th>
                    <th>Reputation</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var user = Model.ElementAt(i);
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Html.ActionLink(user.UserName, "UserProfile", "Users", new { userId = user.UserId }, null)</td>
                        <td>@user.Reputation</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="search-for-users">
    <h2>Find users</h2>
        <div class="form-group">
            <input id="find-users-input" type="text" class="form-control" placeholder="Enter search..." />
            <button type="submit" class="btn btn-default find-users-button">Search</button>
        </div>
    <div class="users-search-results">    
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/Users")
}
